{
  "name": "phaser-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/main.ts",
  "types": "types/main.d.ts",
  "scripts": {
    "start": "pnpm dev",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" -- && phaser-asset-pack-hashing -r dist",
    "preview": "vite preview",
    "editor": "phasereditor2d-launcher -project . -port 1959",
    "editor-remote": "phasereditor2d-launcher -project . -disable-open-browser -public -port 1959",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "format": "prettier --write ./",
    "fix": "pnpm format && pnpm type-check && pnpm lint"
  },
  "author": {
    "email": "lupin.nguyen@outlook.com",
    "name": "Lupin Nguyen",
    "url": "https://github.com/anywaylupin"
  },
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.60.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^18.18.4",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "cypress": "^13.3.1",
    "eslint": "^8.51.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^22.1.0",
    "npm-run-all2": "^6.1.1",
    "nuxtjs-phaser": "^3.0.17",
    "phaser-asset-pack-hashing": "^1.0.6",
    "phaser3spectorjs": "^0.0.8",
    "phasereditor2d-launcher": "^3.63.0",
    "prettier": "^3.0.3",
    "start-server-and-test": "^2.0.1",
    "terser": "^5.21.0",
    "typescript": "~5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.19"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  }
}

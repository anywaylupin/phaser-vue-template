{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "jsdom"],
    "typeRoots": ["./node_modules/@types", "./node_modules/phaser/types"]
  }
}

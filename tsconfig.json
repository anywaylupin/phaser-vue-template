{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "composite": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@types": ["./types/"],
      "@styles": ["./static/styles/"]
    },
    "lib": ["es6", "dom", "dom.iterable", "scripthost"],
    "types": ["phaser"],
    "typeRoots": ["./node_modules/phaser/types"]
  },
  "include": ["vite.config.*", "types/env.d.ts", "src/**/*", "src/**/*.vue"]
}

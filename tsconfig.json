{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "composite": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": ["./types/*"],
      "@styles/*": ["./styles/*"]
    },
    "lib": ["es6", "dom", "dom.iterable", "scripthost"],
    "types": ["phaser"],
    "typeRoots": ["./node_modules/phaser/types", "./types"]
  },
  "include": ["src/**/*.ts", "types", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
